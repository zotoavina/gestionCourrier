@page
@model gestion_courrier_bo.Pages.Register.RegisterModel

@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "_VirginLayout";
}

<h2>Register</h2>
<form method="post" class="register-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Employe.Nom" class="control-label"></label>
            <input asp-for="Employe.Nom" class="form-control" />
            <span asp-validation-for="Employe.Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Employe.Prenom" class="control-label"></label>
            <input asp-for="Employe.Prenom" class="form-control" />
            <span asp-validation-for="Employe.Prenom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Employe.Email" class="control-label"></label>
            <input asp-for="Employe.Email" class="form-control" type="email" />
            <span asp-validation-for="Employe.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Employe.MotDePasse" class="control-label"></label>
            <input asp-for="Employe.MotDePasse" class="form-control" type="password" />
            <span asp-validation-for="Employe.MotDePasse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Employe.PostId" class="control-label">Poste</label>
            <select asp-for="Employe.PostId" class="form-control" asp-items="ViewBag.PostId"></select>
        </div>
        <div class="form-group">
        <label asp-for="Employe.DepartementId" class="control-label">Departement</label>
            <select asp-for="Employe.DepartementId" class="form-control" asp-items="ViewBag.DepartementId"></select>
        </div>

        <div class="form-group form-buttons">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-page="/Login/Login">J'ai déjà un compte</a>
        </div>
    </form>
  


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
